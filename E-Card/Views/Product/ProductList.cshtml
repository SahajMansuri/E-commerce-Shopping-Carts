@model List<E_Card.Models.Product>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Product List</h2>

@if (Model.Count > 0)
{
    <div class="container">
        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-md-4">
                    <div class="card" style="width: 18rem; margin:2rem">
                        <img class="card-img-top" src="@Url.Action("Display", "Product", new { id = product.ProductId })" alt="@product.ProductName" width="100" />
                        <div class="card-body">
                            <h5 class="card-title">@product.ProductName</h5>
                            <p class="card-text">&#8377; @product.ProductPrice</p>
                            <a class="btn btn-primary" href="/Product/AddToCart?id=@product.ProductId">Add to Card</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
else
{
    <p>No products found.</p>
}

